{
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "eslint": "^8.44.0",
    "eslint-plugin-html": "^7.1.0",
    "happy-dom": "^13.10.1",
    "vitest": "^1.3.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "rules": {
      "no-var": "error",
      "no-undef": "error",
      "no-unused-vars": "warn",
      "prefer-const": "error",
      "quotes": [
        "error",
        "single"
      ],
      "semi": "error"
    },
    "plugins": [
      "html"
    ],
    "overrides": [
      {
        "files": [
          "*.html"
        ],
        "parserOptions": {
          "sourceType": "script"
        }
      }
    ]
  }
}